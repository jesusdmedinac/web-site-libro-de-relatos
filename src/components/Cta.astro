---
const { title, subtitle, action } = Astro.props;
---

<div class="cta">
  <p class="cta-title">{title}</p>
  <p class="cta-subtitle">{subtitle}</p>
  <a class="cta-action" href={action.href}>{action.text}</a>
</div>
<style is:inline>
  .cta {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    margin: 2rem 0;
    font-size: 1.5rem;
    color: #fff;
    background-color: #000;
    padding: 32px;
    border-radius: 8px;
  }

  .cta-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .cta-subtitle {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: #909090;
  }

  .cta-action {
    color: #000;
    background-color: #fff;
    font-size: 1rem;
    padding: 8px;
    border-radius: 8px;
    text-decoration: none;
  }

  .cta-action:hover {
    background-color: #fff;
    color: #000;
  }
</style>